generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Customer {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique
  phone String
  reservations Reservation[]
}

model Table {
  id       Int    @id @default(autoincrement())
  number   Int    @unique
  capacity Int
  reservations Reservation[]
}

model Reservation {
  id             Int       @id @default(autoincrement())
  reservationDate DateTime
  customerId     Int
  tableId        Int

  customer Customer @relation(fields: [customerId], references: [id])
  table    Table    @relation(fields: [tableId], references: [id])

  @@unique([reservationDate, tableId]) // Prevent table double booking
}